# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python
*.pyi text diff=python
*.pyw text diff=python
requirements*.txt text
Pipfile text
Pipfile.lock text
pyproject.toml text diff=toml
setup.py text diff=python
setup.cfg text

# Documentation
*.rst text diff=rst
*.md text diff=markdown
*.mdx text diff=markdown
*.txt text
*.pdf binary
docs/* text

# Qt files
*.qss text diff=css
*.ui text diff=xml

# Configuration files
*.yml text diff=yaml
*.yaml text diff=yaml
*.json text
*.ini text
*.cfg text
*.conf text
.env* text
config/* text

# Docker files
Dockerfile text
docker-compose.yml text diff=yaml
.dockerignore text

# Git files
.gitattributes text
.gitignore text
.gitmodules text

# CI/CD files
.github/* text
.gitlab-ci.yml text diff=yaml
.travis.yml text diff=yaml
.circleci/* text

# Development files
.editorconfig text
.pre-commit-config.yaml text diff=yaml
pytest.ini text
tox.ini text
.coveragerc text
.flake8 text
mypy.ini text
.pylintrc text

# Database files
*.db binary
*.sqlite binary
*.sqlite3 binary

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text
*.eps binary

# Audio files
*.mp3 binary
*.wav binary
*.ogg binary

# Font files
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary

# Archive files
*.zip binary
*.gz binary
*.tar binary
*.tgz binary
*.rar binary
*.7z binary

# Scripts
*.sh text eol=lf
*.bash text eol=lf
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore
.github export-ignore
tests export-ignore
docs export-ignore
*.test.* export-ignore
.editorconfig export-ignore
.pre-commit-config.yaml export-ignore
